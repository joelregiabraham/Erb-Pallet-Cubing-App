<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for CT50 Scanner and Database -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Erb Pallet Cubing"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ErbPalletCubing"
        tools:targetApi="31">

        <!-- Main Activity (temporary for Phase 1 testing) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Scanner Intent Filter -->
            <intent-filter>
                <action android:name="com.erb.erbpalletcubing.SCAN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Future Activities (will be added in Phase 2+) -->
        <!-- LoginActivity -->
        <!-- TrailerActivity -->
        <!-- ProHeaderActivity -->
        <!-- PalletDetailActivity -->
        <!-- SummaryActivity -->

    </application>

</manifest>